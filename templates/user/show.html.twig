{% block title %}Utilisateurs
{% endblock %}

{% block body %}
	<h1>Utilisateurs</h1>

	<table class="table table-hover">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
