			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Nickname</th>
				<td>{{ user.nickname }}</td>
			</tr>
			<tr>
				<th>Avatar</th>
				<td>{{ user.avatar }}</td>
			</tr>
			<tr>
				<th>Is_active</th>
				<td>{{ user.isActive ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Created_at</th>
				<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Updated_at</th>
				<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

