{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1>Catégorie</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Tagline</th>
                <td>{{ category.tagline }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
    <a href="{{ path('app_backoffice_categories_list') }}" class="btn btn-outline-secondary">retour à la liste</a>
    <a href="{{ path('app_backoffice_categories_edit', {'id': category.id}) }}" class="btn btn-success mx-auto">Valider</a>
    </div>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
