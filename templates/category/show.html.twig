{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Tagline</th>
                <td>{{ category.tagline }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_categories_list') }}">retour à la liste</a>

    <a href="{{ path('app_backoffice_categories_edit', {'id': category.id}) }}">Valider</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
