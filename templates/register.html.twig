{% extends 'base.html.twig' %}

    {% block title %}Créer un profil d'auteur | Eco-Friendly
    {% endblock %}

{% block body %}

    <div class="container-fluid col-12 col-lg-8 mx-auto">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

        <h1>Créer un profil d'auteur</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.lastname) }}
            {{ form_row(registrationForm.nickname) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.avatar) }}
            <button type="submit" class="btn btn-success">{{ button_label|default('Valider') }}</button>
        {{ form_end(registrationForm) }}
        {# {{ form_row(registrationForm.agreeTerms) }} #}
        <a href="{{ path('app_backoffice_authors_list') }}">Retour à la liste</a>
    </div>
        
{% endblock %}
